<div class='row'>
    <div class='col-md-6 col-12 text-center'>
        <div class='list-wrapper'>
            <ul>
                {{#each burgers}}
                    {{#unless burger_eaten}}
                        {{> burgers/burger-block eaten=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class='col-md-6 col-12 text-center'>
        <div class='list-wrapper'>
            <ul>
                {{#each burgers}}
                    {{#if burger_eaten}}
                        {{> burgers/burger-block}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class='row'>
    <div class='col-12 text-center'>
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="textfield" id="burger" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>